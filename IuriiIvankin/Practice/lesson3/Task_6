#include <iostream>

int main() {

    int k,m,n;
    std::cout << "Сколько блинов можно положить на сковородку: ";
    std::cin >> k;
    std::cout << "Сколько минут нужно жарить блины: ";
    std::cin >> m;
    std::cout << "Сколько блинов: ";
    std::cin >> n;
    if (n%k == 0)
        std::cout << "Готовка займет: " << (n/k)*(m*2) << " минут";
    else
        std::cout << "Готовка займет: " << (n/k+1)*(m*2) << " минут";
    return 0;
}

#include <iostream>

int main() {

    setlocale(LC_ALL, "ru");
    double a, b;
    char operation;
    std::cout << "Ведите два числа через пробел: " << std::endl;
    std::cin >> a >> b;
    std::cout << "Ведите тип операции: " << std::endl;
    std::cin >> operation;
    switch(operation)
    {
        case '+':
            std::cout << a + b;
            break;
        case '-':
            std::cout << a-b;
            break;
        case '*':
            std::cout << a*b;
            break;
        case '/':
            std::cout << a/b;
            break;
        default:
            std::cout << "Error";
    }

    return 0;
}

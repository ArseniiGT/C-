#include <iostream>

int main() {
    setlocale(LC_ALL, "RUS");

    int number;
    std::cout << "Введите число : ";
    std::cin >> number;
    if (number%2 == 0)
        std::cout << "Число " << number << " четное";
    else
        std::cout << "Число " << number << " нечетное";
    return 0;
}

#include <iostream>

bool is_pal (int n)
{
    bool res;
    if (n < 0)
        res = false;
    else if (n >= 0 && n <= 9)
        res = true;
    else
    {
        int *arr = new int;
        int size = 0;
        do {
            arr[size] = n%10;
            size++;
            n /= 10;
        } while(n);
        std::cout << "Проверка записи в массив: ";
        for (int i = 0; i < size; ++i)
        {
            
            std::cout << arr[i] << ' '; 
        }
        std::cout << std::endl;
        for (int i = 0; i < size/2; ++i)
        {
            if (arr[i] != arr[size-i-1])
                res = false;
        }
        delete[] arr;
    }
    return res;
}


int main() {
    setlocale(LC_ALL, "ru");
    std::cout << "Введите число: ";
    int n;
    std::cin >> n;
    bool pal_status = is_pal(n);
    if (pal_status)
        std::cout << "YES!" << std::endl;
    else
        std::cout << "No :(" << std::endl;
    std::cout << pal_status;
    return 0;
}
